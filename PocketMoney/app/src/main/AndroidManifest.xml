<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asif047.pocketmoney">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".PieChart.PieIncomeActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:screenOrientation="portrait"

            android:label="Monthly Income"
            />
        <activity android:name=".PieChart.PiExpenseActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:screenOrientation="portrait"

            android:label="Monthly Expense"
            />
        <activity android:name=".AddExpenseActivity"
            android:screenOrientation="portrait"

            android:label="Add Expense"
            />
        <activity android:name=".AddIncomeActivity"
            android:screenOrientation="portrait"

            android:label="Add Income"
            />
        <activity android:name=".GraphActivity"
            android:screenOrientation="portrait"

            android:label="Transaction Graph"
            />
        <activity android:name=".MonthlyTransactionActivity"
            android:screenOrientation="portrait"

            android:label="Monthly Transaction"
            />
        <activity android:name=".MyPocketActivity"
            android:screenOrientation="portrait"

            android:label="All Transaction"
            />
        <activity android:name=".PocketStartActivity"
            android:screenOrientation="portrait"
            >

        </activity>
        <activity android:name=".StatusActivity"
            android:screenOrientation="portrait"

            android:label="Current Status"
            />
        <activity android:name=".UpdatePocketActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"

            android:screenOrientation="portrait"

            android:label="Update Transaction"
            />
        <activity android:name=".SplashActivity"
            android:screenOrientation="portrait"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>